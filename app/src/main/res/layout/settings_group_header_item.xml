
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/settings_group_header_item_background" >

        <TextView
            android:id="@+id/tvTitle"
            style="@style/SettingsHeadingStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_vertical|start"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical|start"
            android:text="Title goes here" />

        <TextView
            android:id="@+id/tvSubTitle"
            style="@style/SettingsSubHeadingStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="end|center_vertical|start"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical|end" />

    </LinearLayout>
