<com.tribunezamaneh.rss.views.StoryItemCommentView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/animatedRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:clipChildren="false"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tvTime"
        style="@style/ItemAuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end|center_vertical"
        android:padding="4dp"
        android:text="@string/story_item_short_time" />

        <TextView
            android:id="@+id/tvAuthor"
            style="@style/ItemAuthorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/tvTime"
            android:layout_toStartOf="@id/tvTime"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@string/story_item_short_source"
            android:textAllCaps="true" />

        <info.guardianproject.securereaderinterface.widgets.CustomFontTextView
            android:id="@+id/tvContent"
            style="@style/ItemContentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTime"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="TextView" />

    </com.tribunezamaneh.rss.views.StoryItemCommentView>
