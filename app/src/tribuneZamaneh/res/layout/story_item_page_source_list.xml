<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical|start">
        <TextView
            android:id="@+id/tvSourceAuthor"
            style="@style/ItemSourceStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:padding="4dp"
            android:text="@string/story_item_short_source"
            android:textAllCaps="true" />

        <View android:layout_weight="1" android:layout_width="match_parent" android:layout_height="1dp" />

        <info.guardianproject.securereaderinterface.widgets.UpdatingTextView
            android:id="@+id/tvTime"
            style="@style/ItemTimeStyle"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingStart="4dp"
            android:text="@string/story_item_short_time" />
</LinearLayout>


